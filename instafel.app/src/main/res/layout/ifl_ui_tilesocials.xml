<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?ifl_attr_background_color"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:columnCount="5"
        android:rowCount="1"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:useDefaultMargins="false"
        android:background="?ifl_attr_background_color"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/ifl_tiles_chat"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="17dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="?attr/ifl_attr_tile_color"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ifl_contributors"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/ifl_attr_iview_tint" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ifl_tiles_language"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="17dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="?attr/ifl_attr_tile_color"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ifl_language"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/ifl_attr_iview_tint" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="15dp"
            android:id="@+id/ifl_tiles_about"
            android:layout_height="wrap_content"
            app:cardCornerRadius="17dp"
            app:layout_constraintTop_toBottomOf="@+id/ifl_titleSpace">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="?attr/ifl_attr_tile_color"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ifl_about"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/ifl_attr_iview_tint" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ifl_tiles_guide"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="17dp"
            app:layout_constraintTop_toBottomOf="@+id/ifl_titleSpace">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="?attr/ifl_attr_tile_color"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ifl_handbook"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/ifl_attr_iview_tint" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ifl_tiles_github"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="17dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:background="?attr/ifl_attr_tile_color"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ifl_github"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/ifl_attr_iview_tint" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
    <Space
        android:id="@+id/ifl_ui_space_top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="15dp" />



    <Space
        android:id="@+id/ifl_ui_space_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
</LinearLayout>